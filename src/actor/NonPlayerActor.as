package actor {	/**	 * @author alexmccormack	 */	import actor.Actor;		public class NonPlayerActor extends Actor{				public var givesQuest:Boolean;		public var hostile:Boolean;		public var willFight:Boolean;		private var questDialouge:String;		private var questCompleteDialouge:String;		private var chatDialouge:String;		private var completeQuest:Boolean;		private var quest:Quest;				public function NonPlayerActor(_name:String,_givesQuest:Boolean,_hostile:Boolean,_willFight:Boolean,_questDialouge:String,_questCompleteDialouge:String,_chatDialouge:String,_quest:Quest){			playerName = _name;			givesQuest = _givesQuest;			hostile = _hostile;			willFight = _willFight;			questDialouge = _questDialouge;			questCompleteDialouge = _questCompleteDialouge;			chatDialouge = _chatDialouge;			quest = _quest;		}		public function turnInQuest(_rec:PlayerActor):void{			if(completeQuest == false){				if(quest.givesWeapon) _rec.inventory.addItem(quest.weaponItem);				if(quest.givesGold) _rec.giveGold(quest.gold);			}			completeQuest = true;		}		public function speak():String{			if(!givesQuest) return(chatDialouge);			if(!completeQuest) return(questDialouge);			if(completeQuest) return(questCompleteDialouge);			return("fuck");			}		}	}