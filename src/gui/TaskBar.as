package gui {	import flash.events.MouseEvent;	import flash.display.MovieClip;	/**	 * @author alexmccormack	 */	public class TaskBar extends MovieClip{		public var button:MovieClip;		public var kpad:MovieClip;		public var kePad:MovieClip;		private var arrowsClose:Boolean = false;		public function TaskBar():void{			kpad.addEventListener(MouseEvent.CLICK,checkOpenClose);		}		private function checkOpenClose(e:MouseEvent):void{			if(arrowsClose == false){				gotoAndPlay(2);			}			if(arrowsClose == true){				gotoAndPlay(30);			}		}	}}